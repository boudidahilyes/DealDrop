{% extends 'baseFrontOffice.html.twig' %}
{% block body %}
	<main id="main-content" class="grow lg:pt-0">
		<div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
			<div class="container">
				<div class="grid grid-cols-12 gap-x-5 md:gap-x-6 lg:gap-x-7.5 gap-y-16">
					<div class="col-span-full md:col-span-8 md:pr-[38px] lg:pr-[50px] xl:pr-[70px]">
						<div class="mb-12 md:mb-16 lg:mb-20 xl:mb-24">
							<h3 class="text-gray-900 dark:text-white text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-bold mb-8 md:mb-12 lg:mb-14 xl:mb-16">Available
								<span class="text-accent  ">Deliveries</span>
							</h3>
							<div class="flex flex-col gap-y-12">
								{% for delivery in deliveries %}
									<div class="grid grid-cols-[70px_1fr] grid-rows-2 lg:grid-rows-1 lg:auto-rows-auto lg:grid-cols-[70px_1fr_180px] gap-x-4 lg:gap-x-6 xl:gap-x-7.5 gap-y-6">
										<div class="flex items-center justify-center">
											<svg class="aspect-square w-11 h-12.5 fill-accent" fill="currentColor">
												<use xlink:href="assets/img/str1/sprite.svg#gamer-mouse"></use>
											</svg>
										</div>
										<div class="lg:pt-1">
											<h4 class="lg:leading-none text-xl lg:text-2xl font-bold text-gray-900 dark:text-white">
												<a class="text-gray-900 dark:text-white hover:text-accent dark:hover:text-accent transition-colors" href="#">{{delivery.deliveryOrder.products.name}}</a>
											</h4>
											<div class="font-bold text-gray-500">{{delivery.deliveryOrder.deliveryAdress}}</div>
										</div>
										<div class="col-span-full lg:col-auto">
											<a href="{{path('app_delivery_details',{'id' : delivery.id})}}" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-500/40 ring-1 ring-inset ring-gray-500/40 bg-transparent hover:bg-accent hover:text-gray-900 hover:ring-0 w-full">Claim</a>
										</div>
									</div>
								{% endfor %}

							</div>
						</div>

					</div>
					<div class="col-span-full md:col-span-4">

						<ul class="flex flex-wrap gap-x-4 lg:gap-x-9 text-base lg:text-lg font-bold">
							<li>
								<a class="text-gray-900 text-accent dark:text-accent transition-colors" href="#">All Deliveries</a>
							</li>
							<li>
								<a class="text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent transition-colors" href="{{path('app_available_deliveries_in_my_area')}}">Deliveries In My Area</a>
							</li>
							
						</ul>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}

{% extends 'baseFrontOffice.html.twig' %}
{% block body %}
	<div class="page-heading py-6 md:py-12">
		<div class="container">
			<div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
				<svg role="img" class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9">
					<use xlink:href="assets/img/str1/sprite.svg#arrow-right-pixel"></use>
				</svg>
				<h1 class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]">
					Welcome !
				</h1>
			</div>
			<ol class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative">
				<li class="font-bold">
					<a href="{{ path('app_home') }}">Home</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="assets/img/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li>{{user.firstName}} {{user.lastName}}</li>
			</ol>
		</div>
		<div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
			<div class="container">
				<nav class="mb-8 sm:mb-10 md:mb-12 lg:mb-16 xl:mb-20">
					<ul class="flex flex-col flex-wrap sm:flex-row gap-y-4 font-bold md:text-lg gap-x-8">
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="_str1-account-info.html">Personal Info</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_user_edit',{'id':user.id})}}">Edit Profile</a>
						</li>
					
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{ path('app_logout') }}">Logout</a>
						</li>
					</ul>
				</nav>
				<div class="[&amp;>p]:mb-6 [&amp;>p:last-child]:mb-0 bg-white shadow-3xl p-8 md:p-10 lg:p-14 xl:p-[60px] dark:bg-gray-700 [&amp;_a]:text-gray-900 hover:[&amp;_a]:text-accent [&amp;_a]:dark:text-white dark:hover:[&amp;_a]:text-accent">
					<p>Hello
						<strong>{{user.firstName}}</strong>
						


						{#<p>From your account dashboard you can view your
																		<a href="_str1-account-order.html">edit your info</a>, manage your
																		<a href="_str1-account-shipping.html">shipping</a>
																		and
																		<a href="_str1-account-billing.html">billing</a>
																		addresses, and
																		<a href="_str1-account-info.html">edit your password and account details</a>.</p>#}


						<div class="col-span-full md:col-span-4">
							<div class="mb-12 md:mb-16 lg:mb-20 xl:mb-24">
								<h3 class="text-gray-900 dark:text-white text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-bold mb-8 md:mb-12 lg:mb-14 xl:mb-16">
									Personal Info</h3>

								<dl class="mb-8 flex flex-col gap-y-3.5 font-medium md:mb-10 lg:mb-12">
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">FirstName</dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
											{{user.firstName}}
										</dd>
									</div>
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">LastName</dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
										{{user.lastName}}
										</dd>
									</div>
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">Address</dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
											{{user.address}}
										</dd>
									</div>
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">Email</dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
											{{user.email}}
										</dd>
									</div>
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">Phone number</dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
											{{user.phone}}
										</dd>
									</div>
									<div class="flex flex-wrap justify-between">
										<dt class="text-gray-500 opacity-60">Join Date </dt>
										<dd class="[&amp;_a]:text-accent [&amp;_a]:hover:text-gray-900 [&amp;_a]:dark:hover:text-white">
											{{ user.joiningDate|date('Y-m-d H:i:s') }}
										</dd>
									</div>

								</dl>
								{#<a href="#" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-white bg-social-patreon hover:bg-social-patreon/90 w-full">
																	<svg class="h-[14px] w-[14px]" fill="currentColor">
																		<use xlink:href="assets/img/social-icons.svg#patreon"></use>
																	</svg>
																	show more
																</a>#}
							</div>

						</div>
					</p>
				</div>
			</div>
		</div>

	{% endblock %}

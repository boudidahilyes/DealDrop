{% extends 'baseFrontOffice.html.twig' %}
{% block body %}
	<div class="page-heading py-6 md:py-12">
		<div class="container">
			<div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
				<svg role="img" class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9">
					<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel"></use>
				</svg>
				<h1 class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]">
					Orders</h1>
			</div>
			<ol class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative">
				<li class="font-bold">
					<a href="{{ path('app_home') }}">Home</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li class="font-bold">
					<a href="#!">Account</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li>Orders</li>
			</ol>
		</div>
	</div>
	<main id="main-content" class="grow lg:pt-0">
		<div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
			<div class="container">
				<nav class="mb-8 sm:mb-10 md:mb-12 lg:mb-16 xl:mb-20">
					<ul class="flex flex-col flex-wrap sm:flex-row gap-y-4 font-bold md:text-lg gap-x-8">
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="_str1-account-info.html">Personal Info</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_sale_profil')}}">Products For Sale</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_rent_profil')}}">Products for Rent</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_trade_profil')}}">Products for Trade</a>
						</li>
						<li>
							<a class="transition-all text-accent" href="{{path('app_product_for_sale_orders')}}">Orders</a>
						</li>
					</ul>
				</nav>
				{% for order in orders %}
					<div class="pt-2 mb-7 lg:mb-8 xl:mb-10">
						<div class="flex flex-wrap items-baseline mb-8 md:mb-9 lg:mb-12.5 gap-y-2 gap-x-6 xl:gap-x-9 border-y border-gray-500/20 py-7">
							<h3 class="font-bold text-xl lg:text-3xl xl:text-[32px] text-gray-900 dark:text-white">Order MGX{{order.id}}N</h3>
							<dl class="flex flex-wrap font-bold text-gray-500 gap-5 gap-x-6 xl:gap-x-9 text-sm uppercase">
								<div class="inline-flex gap-x-0.5">
									<dt>Date:</dt>
									<dd class="text-gray-900 dark:text-white">
										<time>{{order.orderDate|date('j M, Y')}}</time>
									</dd>
								</div>
								<div class="inline-flex gap-x-0.5">
									<dt>Status:</dt>
									<dd class="text-gray-900 dark:text-white">Awaiting Pick Up</dd>
								</div>
							</dl>
						</div>
						<div class="grid grid-cols-12 gap-x-5 md:gap-x-6 lg:gap-x-7.5 gap-y-10 lg:gap-y-14">
							<div class="col-span-full sm:col-span-6 md:col-span-3">
								<h5 class="font-bold text-gray-900 dark:text-white mb-5 lg:mb-8">Shipping Details</h5>
								<address class="leading-8 [&>p]:mb-8 [&>p:last-child]:mb-0 not-italic">
									<p>{{order.member.firstName}}
										{{order.member.lastName}}<br><a class="hover:text-primary" href="mailto:jspiegel@yourmail.com">{{order.member.email}}</a><br>{{order.member.phone}}</p>
									<p>{{order.deliveryAdress}}</p>
								</address>
							</div>
							<div class="col-span-full sm:col-span-6 md:col-span-3">
								<h5 class="font-bold text-gray-900 dark:text-white mb-5 lg:mb-8">Your Order</h5>
								<ul class="leading-8 not-italic">
									<li>
										<div>{{order.products.name}}
											-</div>
										{% if order.products.whoIam() == 'ProductForSale' %}
											<div>{{order.products.price}}
												Dt</div>
										{% endif %}
										{% if order.products.whoIam() == 'ProductForRent' %}
											<div>{{order.products.pricePerDay}}
												Dt *{{order.rentDays}}</div>
										{% endif %}
									</li>
								</ul>
							</div>
							<div class="col-span-full sm:col-span-6 md:col-span-3">
								<h5 class="font-bold text-gray-900 dark:text-white mb-5 lg:mb-8">Totals & Payment</h5>
								{% if order.products.whoIam() == 'ProductForSale' %}
									<address class="leading-8 [&>p]:mb-8 [&>p:last-child]:mb-0 not-italic">
										<p>Sub total:
											{{order.products.price}}
											Dt<br>Shipping: 8 Dt<br>Order Total:
											<span class="text-accent">{{order.products.price + 8}}
												Dt</span>
											{% if order.payment == 'bank' %}
											<br><span class="text-accent">paid with credit card</span>
											{% endif %}
										</p>
									</address>
								{% endif %}
								{% if order.products.whoIam() == 'ProductForRent' %}
									<address class="leading-8 [&>p]:mb-8 [&>p:last-child]:mb-0 not-italic">
										<p>Sub total:
											{{order.products.pricePerDay}}
											Dt *{{order.rentDays}}<br>Shipping: 8 Dt<br>Order Total:
											<span class="text-accent">{{(order.products.pricePerDay * order.rentDays) + 8}}
												Dt</span>
																							{% if order.payment == 'bank' %}
											<br><span class="text-accent">paid with credit card</span>
											{% endif %}
										</p>
									</address>
								{% endif %}
																{% if order.products.whoIam() == 'ProductForTrade' %}
									<address class="leading-8 [&>p]:mb-8 [&>p:last-child]:mb-0 not-italic">
										<p>Sub total:
											-<br>Shipping: 8 Dt<br>Order Total:
											<span class="text-accent">8	
												Dt</span>
										</p>
									</address>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}

{% extends 'baseFrontOffice.html.twig' %}
{% block body %}
	<div class="page-heading py-6 md:py-12">
		<div class="container">
			<div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
				<svg role="img" class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9">
					<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel"></use>
				</svg>
				<h1 class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]">
					Product</h1>
			</div>
			<ol class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative">
				<li class="font-bold">
					<a href="{{ path('app_home') }}">Home</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li class="font-bold">
					{% if ProductType == "ProductForSale" %}
						<a href="{{ path('app_product', {'ProductType': 'ProductForSale'}) }}">Product</a>
					{% endif %}
					{% if ProductType == "ProductForTrade" %}
						<a href="{{ path('app_product', {'ProductType': 'ProductForTrade'}) }}">Product</a>
					{% endif %}
					{% if ProductType == "ProductForRent" %}
						<a href="{{ path('app_product', {'ProductType': 'ProductForRent'}) }}">Product</a>
					{% endif %}
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li>Add Product For
					{% if ProductType == "ProductForSale" %}Sale
					{% endif %}
					{% if ProductType == "ProductForTrade" %}Trade
					{% endif %}
					{% if ProductType == "ProductForRent" %}Rent
					{% endif %}
				</li>

			</ol>
		</div>
	</div>
	<main id="main-content" class="grow lg:pt-0">
		<div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
			<div class="container">
				{{ form_start(formProduct ,{'attr':{'class':'grid grid-cols-12 gap-x-6 md:gap-x-7.5 content-start gap-y-12'}}) }}
				<div class="col-span-full lg:col-span-8 lg:pr-[70px]">
					<div>
						<div class="mb-10 lg:mb-16">
							<h2 class="text-2xl font-bold text-gray-900 dark:text-white md:text-3xl md:tracking-tight lg:text-3.5xl">
								Add Product For Sale</h2>
						</div>
						<div class="grid grid-cols-1 sm:grid-cols-2 gap-7">
							<div>
								{{ form_label(formProduct.productCategory, 'Product Category', {'label_attr': {'class': 'block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5'}}) }}
								{{ form_widget(formProduct.productCategory, {'attr': {'class': 'w-full border-base bg-white/40 px-4 h-12.5 font-medium text-gray-900 transition-all duration-150 bg-caret bg-[length:10px_6px] bg-[position:right_18px_center] focus:border-accent focus:outline-0 focus:ring-0 focus:text-gray-900 hover:cursor-pointer dark:border-gray-650 dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:text-white dark:bg-caret-white dark:focus:bg-gray-900'}}) }}
							</div>
							<div>
								{{ form_label(formProduct.name, 'Product Name', {'label_attr': {'class': 'block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5'}}) }}
								{{ form_widget(formProduct.name, {'attr': {'class': 'group-[.is-success]:bg-input-success-dark group-[.is-error]:border-danger group-[.is-error]:bg-input-invalid group-[.is-error]:text-danger group-[.is-success]:pr-16 group-[.is-invalid]:pr-16 px-4 py-2 border-base bg-white/40 bg-[length:18px_18px,_38px_38px] bg-[position:right_16px_center,_right_6px_center] bg-no-repeat font-medium leading-8 tracking-tight text-gray-900 transition-all duration-150 placeholder:font-normal placeholder:text-gray-500/60 focus:border-accent focus:bg-white focus:text-gray-900 focus:outline-0 focus:ring-0 dark:border-gray-650 dark:group-[.is-success]:bg-input-success dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:bg-gray-900 w-full'}}) }}
								<p class="group-[.is-error]:block mt-2 hidden text-xs text-danger"></p>
							</div>
							<div class="col-span-full">{{ form_label(formProduct.description, 'Product Description', {'label_attr': {'class': 'block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5'}}) }}
								{{ form_widget(formProduct.description, {'attr': {'class': 'block border-base bg-white/40 w-full px-4 py-2 tracking-tight text-gray-900 transition-all duration-150 placeholder:text-gray-500/60 focus:border-accent focus:outline-0 focus:ring-0 dark:border-gray-650 dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:bg-gray-900 h-40 md:h-48'}}) }}
							</div>
							<div>
								{{ form_label(formProduct.price, 'Product Price', {'label_attr': {'class': 'block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5'}}) }}
								{{ form_widget(formProduct.price, {'attr': {'class': 'group-[.is-success]:bg-input-success-dark group-[.is-error]:border-danger group-[.is-error]:bg-input-invalid group-[.is-error]:text-danger group-[.is-success]:pr-16 group-[.is-invalid]:pr-16 px-4 py-2 border-base bg-white/40 bg-[length:18px_18px,_38px_38px] bg-[position:right_16px_center,_right_6px_center] bg-no-repeat font-medium leading-8 tracking-tight text-gray-900 transition-all duration-150 placeholder:font-normal placeholder:text-gray-500/60 focus:border-accent focus:bg-white focus:text-gray-900 focus:outline-0 focus:ring-0 dark:border-gray-650 dark:group-[.is-success]:bg-input-success dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:bg-gray-900 w-full'}}) }}
								<p class="group-[.is-error]:block mt-2 hidden text-xs text-danger"></p>
							</div>
						</div>
					</div>
					<br>
					{{ form_widget(formProduct.submit, {'attr': {'class': 'inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-900 bg-accent hover:bg-accent/90 w-full'}}) }}
				</div>
				{{ form_end(formProduct) }}
			</div>
		</div>
	</main>
{% endblock %}

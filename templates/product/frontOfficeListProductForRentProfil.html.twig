{% extends 'baseFrontOffice.html.twig' %}
{% block body %}
	<div class="page-heading py-6 md:py-12">
		<div class="container">
			<div class="mb-2 flex items-baseline gap-x-3 lg:gap-x-4.5">
				<svg role="img" class="aspect-[6/9] w-3 fill-accent sm:w-4 md:w-5 lg:w-7 xl:w-9">
					<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel"></use>
				</svg>
				<h1 class="relative mb-3 text-3xl font-bold leading-none tracking-tighter text-gray-900 dark:text-white sm:text-4xl md:text-5xl lg:text-7xl xl:text-[84px]">
					Products for Rent</h1>
			</div>
			<ol class="relative flex flex-wrap gap-x-6 text-sm leading-none text-gray-500 lg:gap-x-8 lg:text-lg [&>li>a]:text-gray-900 hover:[&>li>a]:text-accent dark:[&>li>a]:text-white dark:hover:[&>li>a]:text-accent [&>li]:relative">
				<li class="font-bold">
					<a href="{{ path('app_home') }}">Home</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li class="font-bold">
					<a href="#!">Account</a>
					<svg role="img" class="fill-gray absolute -right-4 top-1/2 aspect-[3/5] w-1.5 -translate-y-1/2 lg:-right-5">
						<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
					</svg>
				</li>
				<li>Products for Rent</li>
			</ol>
		</div>
	</div>
	<main id="main-content" class="grow lg:pt-0">
		<div class="pt-10 pb-16 lg:pt-20 lg:pb-44">
			<div class="container">
				<nav class="mb-8 sm:mb-10 md:mb-12 lg:mb-16 xl:mb-20">
					<ul class="flex flex-col flex-wrap sm:flex-row gap-y-4 font-bold md:text-lg gap-x-8">
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="_str1-account-info.html">Personal Info</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_sale_profil')}}">Products For Sale</a>
						</li>
						<li>
							<a class="transition-all text-accent" href="{{path('app_product_for_rent_profil')}}">Products for Rent</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_trade_profil')}}">Products for Trade</a>
						</li>
						<li>
							<a class="transition-all text-gray-900 hover:text-accent dark:text-white dark:hover:text-accent" href="{{path('app_product_for_sale_orders')}}">Orders</a>
						</li>
					</ul>
				</nav>
				<div class="flex gap-x-8 justify-between items-center mb-12 md:mb-16 lg:mb-20 xl:mb-24">
					<nav>
						<ul class="flex flex-wrap gap-x-4 lg:gap-x-9 text-base lg:text-lg font-bold">
							<li>
								<a class="text-gray-900 text-accent dark:text-accent transition-colors" href="#">All Categories</a>
							</li>
						</ul>
					</nav>
					<div class="shrink-0 flex gap-4 sm:gap-8 items-center relative">
						<button class="js-vv-streams-filter-toggle group peer">
							<svg role="img" class="w-5 sm:w-7.5 aspect-square fill-gray-500 group-hover:fill-gray-900 transition-colors dark:fill-gray-650 dark:group-hover:fill-white">
								<use xlink:href="/build/images/str1/sprite.svg#filter"></use>
							</svg>
						</button>
						<div class="absolute w-72 sm:w-80 opacity-0 peer-[.active]:opacity-100 transition-all invisible peer-[.active]:visible -translate-y-3 peer-[.active]:translate-y-0 flex flex-col gap-8 bg-white dark:bg-gray-700 p-6 sm:p-7.5 z-10 right-0 top-14 shadow-3xl">
							<div>
								<label class="block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5" for="filter-by">Filter By</label>
								<select class="w-full border-base bg-white/40 px-4 h-12.5 font-medium text-gray-900 transition-all duration-150 bg-caret bg-[length:10px_6px] bg-[position:right_18px_center] focus:border-accent focus:outline-0 focus:ring-0 focus:text-gray-900 hover:cursor-pointer dark:border-gray-650 dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:text-white dark:bg-caret-white dark:focus:bg-gray-900" name="filter-by" id="filter-by">
									<option value="newest-items">Newest Items</option>
									<option value="older-items">Older Items</option>
									<option value="popular">Popular</option>
									<option value="most-liked">Most Liked</option>
								</select>
							</div>
							<div>
								<label class="block text-sm font-bold uppercase text-gray-500 [&:not(:empty)]:mb-2.5" for="order-by">Order By</label>
								<select class="w-full border-base bg-white/40 px-4 h-12.5 font-medium text-gray-900 transition-all duration-150 bg-caret bg-[length:10px_6px] bg-[position:right_18px_center] focus:border-accent focus:outline-0 focus:ring-0 focus:text-gray-900 hover:cursor-pointer dark:border-gray-650 dark:bg-gray-900/40 dark:text-white dark:placeholder:text-gray-500/80 dark:focus:border-accent dark:focus:text-white dark:bg-caret-white dark:focus:bg-gray-900" name="order-by" id="order-by">
									<option value="descending">Descending</option>
									<option value="ascending">Ascending</option>
								</select>
							</div>
							<div class="pt-1">
								<button type="submit" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-900 bg-accent hover:bg-accent/90 w-full">Apply
																																																																																																																                    Filters</button>
							</div>
						</div>
					</div>
				</div>
				<div class="grid grid-cols-12 gap-x-6 gap-y-9 md:gap-x-6 lg:gap-x-7.5">
					{% for productForRent in listProduct %}
						<div class="col-span-full sm:col-span-6 md:col-span-4 lg:col-span-3">
							<figure class="group relative mb-5.5 overflow-hidden bg-gray-100"><img class="aspect-[27/34] w-full object-cover transition-transform duration-300 group-hover:scale-110" src="{{ vich_uploader_asset(productForRent.productImages.first(), 'imageFile') }}" alt="Neko MaGiX Black Mug">
								{% if productForRent.status == 'Pending' %}
									<div class="vv-sale-label absolute left-0 top-0 bg-yellow font-bold uppercase text-base text-gray-900 w-24 h-[60px] pl-2 pt-2 leading-normal">
										Pending!</div>
								{% endif %}
								{% if productForRent.disponibility == 'UnAvailable' %}
									<div class="vv-sale-label absolute left-0 top-0 bg-red font-bold uppercase text-base text-white w-24 h-[60px] pl-2 pt-2 leading-normal">
										LEASED!</div>
								{% endif %}
								<div class="absolute inset-0 bg-white dark:bg-gray-900 opacity-0 group-hover:opacity-90 transition-opacity"></div>
								<div class="flex absolute justify-center left-0 right-0 top-1/2 -translate-y-1/2 scale-90 [@media(hover:hover)]:opacity-0 [@media(hover:hover)]:transition-all [@media(hover:hover)]:duration-300 [@media(hover:hover)]:group-hover:scale-100 [@media(hover:hover)]:group-hover:opacity-100">
									{% if productForRent.disponibility == 'UnAvailable' %}

										<a href="{{path('app_product_for_rent_returned',{'id':productForRent.id})}}" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-900 bg-accent hover:bg-accent/90">
											return</a>
									{% endif %}
									{% if productForRent.status == 'Pending' %}
										<a href="{{path('app_product_for_rent_edit',{'id':productForRent.id})}}" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-900 bg-accent hover:bg-accent/90">
											Edit Product</a>
									{% endif %}
                  									{% if productForRent.disponibility != 'UnAvailable' and productForRent.status!='Removed' %}

										<a href="{{path('app_product_for_rent_delete',{'id':productForRent.id})}}" class="inline-flex text-center font-bold leading-none transition-colors uppercase justify-center gap-x-3 py-4 px-4 md:py-[18px] lg:px-8 text-sm text-gray-900 bg-accent hover:bg-accent/90">
											remove</a>
									{% endif %}
								</div>
							</figure>
							<div>
								<h3 class="mb-1 font-bold leading-tight text-lg text-gray-900 dark:text-white">
									<a class="text-gray-900 transition-colors hover:text-accent dark:text-white dark:hover:text-accent" {% if productForRent.status =='Approved' %}
                   href="{{path('app_product_for_sale_details',{'id':productForRent.id})}} {% else %} href="#!" {% endif %}">{{productForRent.name}}</a>
								</h3>
							</div>
						</div>
					{% endfor %}
				</div>
				<nav class="pt-10 md:pt-14 lg:pt-24">
					<ul class="flex flex-wrap items-center justify-center gap-x-1.5 md:gap-x-2 lg:gap-x-4">
						<li class="flex items-center">
							<a class="inline-flex justify-center items-center border border-gray-200 dark:border-gray-600 w-8 lg:w-12.5 aspect-square text-gray-900 dark:text-white hover:bg-accent hover:border-accent dark:hover:border-accent transition-colors hover:text-gray-900 dark:hover:text-gray-900 pointer-events-none" href="#">
								<svg class="w-1.5 h-2.5 rotate-180 opacity-40" fill="currentColor">
									<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
								</svg>
							</a>
						</li>
						<li>
							<a class="inline-flex justify-center items-center w-8 lg:w-12.5 aspect-square border font-bold transition-colors text-gray-900 bg-accent border-accent dark:border-accent" href="#">1</a>
						</li>
						<li>
							<a class="inline-flex justify-center items-center w-8 lg:w-12.5 aspect-square border font-bold transition-colors border-gray-200 dark:border-gray-600 text-gray-900 dark:text-white hover:text-gray-900 hover:bg-accent dark:hover:text-gray-900 hover:border-accent dark:hover:border-accent" href="#">2</a>
						</li>
						<li>
							<a class="inline-flex justify-center items-center w-8 lg:w-12.5 aspect-square border font-bold transition-colors border-gray-200 dark:border-gray-600 text-gray-900 dark:text-white hover:text-gray-900 hover:bg-accent dark:hover:text-gray-900 hover:border-accent dark:hover:border-accent" href="#">3</a>
						</li>
						<li>
							<a class="inline-flex justify-center items-center w-8 lg:w-12.5 aspect-square border font-bold transition-colors border-gray-200 dark:border-gray-600 text-gray-900 dark:text-white hover:text-gray-900 hover:bg-accent dark:hover:text-gray-900 hover:border-accent dark:hover:border-accent" href="#">4</a>
						</li>
						<li class="flex items-center">
							<a class="inline-flex justify-center items-center border border-gray-200 dark:border-gray-600 w-8 lg:w-12.5 aspect-square text-gray-900 dark:text-white hover:bg-accent hover:border-accent dark:hover:border-accent transition-colors hover:text-gray-900 dark:hover:text-gray-900" href="#">...</a>
						</li>
						<li class="flex items-center">
							<a class="inline-flex justify-center items-center border border-gray-200 dark:border-gray-600 w-8 lg:w-12.5 aspect-square text-gray-900 dark:text-white hover:bg-accent hover:border-accent dark:hover:border-accent transition-colors hover:text-gray-900 dark:hover:text-gray-900" href="#">
								<svg class="w-1.5 h-2.5" fill="currentColor">
									<use xlink:href="/build/images/str1/sprite.svg#arrow-right-pixel-alt"></use>
								</svg>
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</main>
{% endblock %}
